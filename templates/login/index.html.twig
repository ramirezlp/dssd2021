{% block title %}Login{% endblock %}

{% block body %}
    <link href="{{ asset('theme/css/signin.css') }}" rel="stylesheet">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form class="form-signin" action="{{ path('login') }}" method="post">
      <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesi칩n</h1>
      <label for="inputEmail" class="sr-only">Usuario</label>
      <input type="text" id="username" placeholder="Usuario" class="form-control" required name="_username" value="{{ last_username }}"/>
      <label for="inputPassword" class="sr-only">Contrase침a</label>
      <input type="password" class="form-control" placeholder="Contrase침a" required id="password" name="_password"/>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Recordar
        </label>
      </div>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesi칩n</button>
      <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
    </form>
    
{% endblock %}